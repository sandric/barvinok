<% if activity.trackable && activity.owner %>
	<div>
		<%= activity.owner == User.first ? "You" : link_to(activity.owner.name, user_path(activity.owner.name)) %>

  		followed <%= link_to activity.trackable.name, user_path(activity.trackable.name) %>
  	</div>
<% else %>
  	<div>
		<%= activity.owner == User.first ? "You" : link_to(activity.owner.name, user_path(activity.owner.name)) %>

  		followed user that does not exist anymore.
  	</div>
<% end %>