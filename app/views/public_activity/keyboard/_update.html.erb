<% if activity.trackable && activity.owner %>
	<div>
		<%= activity.owner == User.first ? "You" : link_to(activity.owner.name, [activity.owner]) %>

  		updated
  		<%= link_to(activity.trackable.name, [activity.owner, activity.trackable]) %>
  	</div>
<% else %>
  	<div>
		<%= activity.owner == User.first ? "You" : link_to(activity.owner.name, [activity.owner]) %>

  		updated a keyboard that does not exist anymore.
  	</div>
<% end %>