<%= link_to 'Edit', edit_user_keyboard_path(@user.name, @keyboard.name) %>

<%= button_to 'Delete', user_keyboard_path(@user.name, @keyboard.name), method: :delete, data: { confirm: 'Are you sure?' } %>

<%= link_to 'Commits', user_keyboard_commits_path(@user.name, @keyboard.name) %>

<%= link_to 'HEAD', user_keyboard_commit_path(@user.name, @keyboard.name, @keyboard.commits.last) %>

<%= link_to 'Talks', user_keyboard_talks_path(@user.name, @keyboard.name) %>

<%= link_to 'Likes', likes_user_keyboard_path(@user.name, @keyboard.name) %>

<%= link_to 'Followers', followers_user_keyboard_path(@user.name, @keyboard.name) %>



<% if @user != User.first %>


	<%= react_component('Like', "like",
			liked: User.first.liked?(@keyboard),
			likes: @keyboard.get_likes.size,
			user: @user,
			keyboard: @keyboard) %>

	<%= react_component('Follow', "follow",
			follows: User.first.following?(@keyboard),
			followers: @keyboard.count_user_followers,
			user: @user,
			keyboard: @keyboard) %>

<% end %>


<h1> <%= j @keyboard.name %> </h1>

<%= react_component('MarkdownEditor', "markdown_editor", data: @keyboard.description) %>