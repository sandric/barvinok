<% url = @keyboard.id.nil? ? user_keyboards_path(@user.name) : user_keyboard_path(@user.name, @keyboard.name) %>

<%= form_for [@user, @keyboard], url: url do |f| %>

	<%= f.text_field :name %>

  <%= react_component('MarkdownEditor', model: "keyboard", field: "description", data: @keyboard.description) %>

  <%= f.submit %>

<% end %>
