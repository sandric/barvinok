<h2>Edit <%= resource_name.to_s.humanize %></h2>

<% avatar_field = nil %>

<% form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <% avatar_field = f.attachment_field(:avatar, direct: true) %>
<% end %>


<%= devise_error_messages! %>

<%= react_component('User', user: resource, avatar_field: avatar_field, action: :edit, authenticity_token: form_authenticity_token) %> 