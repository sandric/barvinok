<% url = @talk.id.nil? ? user_keyboard_talks_path(@user.name, @keyboard.name) : user_keyboard_talk_path(@user.name, @keyboard.name, @talk) %>

<%= form_for [@user, @keyboard, @talk], url: url do |f| %>

	<%= f.text_field :title %>

	<%= react_component('MarkdownEditor', model: "talk", field: "data", data: @talk.data) %>

  <%= f.submit %>

<% end %>