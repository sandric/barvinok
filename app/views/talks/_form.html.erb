<% url = @talk.id.nil? ? user_keyboard_talks_path(@user.name, @keyboard.name) : user_keyboard_talk_path(@user.name, @keyboard.name, @talk) %>

<%= form_for [@user, @keyboard, @talk], url: url do |f| %>

  	<%= f.submit %>

	<%= f.text_field :title %>

	<div class="data-editing-area">
	  	<%= f.text_area :data %>
	  	<div id="content" class="markdown"></div>
  	</div>

<% end %>

<%= javascript_tag do %>

$(document).ready(function() {
        editor = CodeMirror.fromTextArea(document.getElementById("talk_data"), {
  			value: document.getElementById("talk_data").innerHTML,
  			mode:  "markdown",
  			lineNumbers: true,

  		});

		function updateTextArea() {
    		editor.save()
    		document.getElementById('content').innerHTML = marked(document.getElementById("talk_data").value);
		}

		editor.on('change', updateTextArea);


    	document.getElementById('content').innerHTML = marked(document.getElementById("talk_data").value);
    });

<% end %>