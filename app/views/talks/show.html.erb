<%= link_to 'Edit', edit_user_keyboard_talk_path(@user.name, @keyboard.name, @talk) %> 

<%= link_to 'Delete', user_keyboard_talk_path(@user.name, @keyboard.name, @talk), method: :delete, data: { confirm: 'Are you sure?' } %>

<%= link_to 'Add Comment', new_user_keyboard_talk_comment_path(@user.name, @keyboard.name, @talk) %>


<h1> <%= j @talk.title %> </h1>


<%= render :partial => "shared/markdown_object", object: @talk, locals: {dataMethod: :data} %>


<div id="content" class="markdown"></div>

<% @talk.comments.each do |comment| %>
	<div class="comment" id="comment_<%= comment.id %>">
		<div class="head">
			Created by: <b><%= comment.user.name %></b>

			<%= link_to 'Delete', user_keyboard_talk_comment_path(@user.name, @keyboard.name, @talk, comment), method: :delete, data: { confirm: 'Are you sure?' } %>

			<%= link_to 'Edit', edit_user_keyboard_talk_comment_path(@user.name, @keyboard.name, @talk, comment) %> 

		</div>
		<%= render :partial => "shared/markdown_object", object: comment, locals: {dataMethod: :data} %>
	</div>
<% end %>